<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoestrellas"
    tools:context="brandon.example.com.mexicounido.Queja.QuejaActivity">
    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="175dp"
        android:layout_height="87dp"
        app:srcCompat="@drawable/logofuturomexico"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.019" />
    <TextView
        android:id="@+id/textView"
        android:textColor="@color/amarillo"
        android:textStyle="italic"
        android:layout_width="305dp"
        android:layout_height="97dp"
        android:text="Selecciona la categoría de tu queja"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:textSize="32sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="122dp"
        app:layout_constraintHorizontal_bias="0.512" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Siguiente"
        android:background="@color/verde"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/buttonSeguridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguridad"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSalud"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonTrasnporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transporte y comunicación"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/buttonSalud"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonSalud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salud"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonMedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medio ambiente"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonTrasnporte"
        app:layout_constraintLeft_toRightOf="@+id/buttonSeguridad"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.538" />

    <Button
        android:id="@+id/buttonEducacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Educación"
        android:layout_marginTop="-80dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSeguridad"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonEnergia"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.696" />

    <Button
        android:id="@+id/buttonEnergia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energía"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonMedio"
        android:layout_marginRight="57dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
